<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true"/>

        <service id="flexphp.location.bundle" class="FlexPHP\Bundle\Location" />
        <service id="FlexPHP\Bundle\Location" alias="flexphp.location.bundle" />

        <service id="flexphp.location.bundle.currency_controller" class="FlexPHP\Bundle\Location\Controller\CurrencyController" public="true" />
        <service id="flexphp.location.bundle.document_type_controller" class="FlexPHP\Bundle\Location\DocumentTypeController" public="true" />
        <service id="flexphp.location.bundle.payment_method_controller" class="FlexPHP\Bundle\Location\PaymentMethodController" public="true" />

        <prototype namespace="FlexPHP\Bundle\LocationBundle\" resource="../src/*" exclude="../src/{DependencyInjection}">
            <tag name="@router"/>
        </prototype>
    </services>
</container>

