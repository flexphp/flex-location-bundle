{% for _city in cities %}
    <tr>
        <td>{{ _city.id }}</td>
        <td>{{ _city.stateIdInstance.name|default('-') }}</td>
        <td>{{ _city.name }}</td>
        <td>{{ _city.code }}</td>
        <td class="text-center">
            <div class="btn-group">
                <a href="{{ path('flexphp.location.cities.read', {id: _city.id}) }}" class="btn btn-sm btn-outline-light" title="{% trans from 'messages' %}action.read{% endtrans %}">
                    <i class="fa fa-eye text-dark" aria-hidden="true"></i>
                </a>

                <a href="{{ path('flexphp.location.cities.edit', {id: _city.id}) }}" class="btn btn-sm btn-outline-light" title="{% trans from 'messages' %}action.edit{% endtrans %}">
                    <i class="fa fa-edit text-info" aria-hidden="true"></i>
                </a>
            </div>
        </td>
    </tr>
{% endfor %}
